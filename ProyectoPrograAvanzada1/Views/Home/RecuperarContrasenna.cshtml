@model ProyectoPrograAvanzada1.Entities.Usuario

@{
	ViewData["Title"] = "IniciarSesion";
	Layout = "~/Views/Shared/_Layout - Externo.cshtml";
}


<head>
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<link href="https://fonts.gstatic.com" rel="preconnect" />
	<link href="https://fonts.googleapis.com/css2?family=Tinos:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&amp;display=swap" rel="stylesheet" />
	<link href="~/css/EstilosInicioSesion.css" rel="stylesheet" />
</head>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


@*1*@
<div>

	@*2*@
	<div class="masthead">

		@*3*@
		<div class="masthead-content text-white">

			@*4*@
			<div class="container-fluid px-7 px-lg-2">
				<br />

				@*5*@
				<div>

					@*6*@
					<div class="container">

						@*7*@
						<div class="row justify-content-center">

							@*8*@
							<div class="card">

								@*9*@
								<div class="card-header">
									<h3 class="text-center" style="color: black">Recuperar Contraseña</h3>
								</div>

								@*10*@
								<div class="card-body">
									<form id="recuperacontrasenna">
										<div class="form-outline mb-4">
											<input class="form-control" type="email" name="Correo" id="Correo" placeholder="micorreo@gmail.com" required />
										</div>
										<div class="text-center">
											<button type="submit" class="btn btn-primary btn-block mb-4" onclick="recuperacontrasenna()">
												Enviar Correo
											</button>
										</div>

										<div style="text-align:center; margin-top:2%">
											<a href="@Url.Action("IniciarSesion","Home")" class="text-center">¿Ya tienes una cuenta?</a>
										</div>
										<div style="text-align:center; margin-top:2%">
											<a href="@Url.Action("RegistrarUsuario","Home")" class="text-center">¿No tienes una cuenta?</a>
										</div>
									</form>

								</div>
							</div>
						</div>
					</div>
				</div>
				<br />
				<br />
			</div>
		</div>
		<br />
		<br />
	</div>
</div>
