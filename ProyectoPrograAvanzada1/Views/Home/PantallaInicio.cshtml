@model List<ProyectoPrograAvanzada1.Entities.Categoria>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<style>

    .carousel-container {
        max-width: 90%;
        margin: 80px auto;
        padding: 0;
        overflow: hidden;
        position: relative;
    }
  
    .swiper-container {
        width: 100%;
    }

    .swiper-slide {
        width: 40%;
        height: auto;
        border-radius: 25px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        / background-color: #f2f2f2;
        border: 7px solid rgba(255, 165, 0, 0.5);
        box-shadow: 0 50px 150px rgba(0, 0, 0, 0.5), 0 0 20px rgba(0, 0, 0, 0);
        position: relative;
    }

        .swiper-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            / border-radius: 25px 25px 0 0;
            border: none;
            transition: transform 0.3s ease;
        }


        .swiper-slide:hover img {
            transform: translateY(-10px);
        }

    .carousel-title {
        text-align: center;
        font-size: 42px;
        font-weight: bold;
        margin-bottom: 20px;
    }


    .carousel-caption {
        padding: 15px;
        text-align: center;
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff;
        border-radius: 0 0 25px 25px;
        font-size: 10px;
        line-height: 1.4;
    }


    .btn-ver-productos {
        display: inline-block;
        background-color: #660828;
        color: #fff;
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-ver-productos:hover {
            background-color: #4d0620;
        }

</style>


<div class="carousel-title">Categorías</div>

<div class="carousel-container">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <div class="card">
                            <img src="~/imagenes/logo.jpg" alt="Imagen de @item.Nombre" />
                            <div class="carousel-caption">
                                <h5>@item.Nombre</h5>
                                <a href="@Url.Action("VerProductosCat", "CatalogoProductos", new {idcategoria = item.IdCategoria})" class="btn-ver-productos">Ver Productos</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No hay categorías para mostrar</p>
            }
        </div>


    </div>
</div>


<div class="swiper-button-prev"></div>
<div class="swiper-button-next"></div>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 5,
            spaceBetween: 20,
            autoplay: {
                delay: 4000,
                disableOnInteraction: true,
            },
            speed: 800,
            loop: true,
            centeredSlides: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    });
</script>
