@model ProyectoPrograAvanzada1.Entities.Usuario
@{
	ViewData["Title"] = "CambiarContrasenna";
	Layout = "~/Views/Shared/_Layout - Externo.cshtml";
}

<head>
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<link href="https://fonts.gstatic.com" rel="preconnect" />
	<link href="https://fonts.googleapis.com/css2?family=Tinos:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&amp;display=swap" rel="stylesheet" />
	<link href="~/css/EstilosInicioSesion.css" rel="stylesheet" />
</head>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="masthead py-3">

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<div class="card">
				<h2 style="text-align: center" class="mt-2">Cambio de Contraseña</h2>
				<div class="card-body py-5 px-md-5">
					<form id="cambiacontrasenna">
						<div class="form-group mb-4">
							<div class="input-group">

								<span class="input-group-text"><i class="fas fa-envelope"></i></span>

								@Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @placeholder = "Correo Electrónico", @type = "Email", @required = "true", @readonly = "true" })
							</div>
						</div>
						<div class="form-group mb-4">
							<div class="input-group">

								<span class="input-group-text"><i class="fas fa-lock"></i></span>
								<input class="form-control" type="password" class="form-control" id="ContrasennaTemporal" name="ContrasennaTemporal" placeholder="Contraseña Temporal">
							</div>
						</div>
						<div class="form-group mb-4">
							<div class="input-group">

								<span class="input-group-text"><i class="fas fa-lock"></i></span>
								<input class="form-control" type="password" class="form-control" id="Contrasenna" name="Contrasenna" placeholder="Nueva Contraseña">
							</div>
						</div>



						<div class="row">
							<div class="col-12">
								<button type="submit" class="btn btn-primary btn-block" onclick="cambiacontrasenna()">Cambiar Contraseña</button>
							</div>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>

		<div class="row justify-content-center mt-3">
			<div class="col-lg-6">
				<div class="card">
					<div class="card-body py-3 px-md-4">
						<h5 class="card-title">Requisitos de la Contraseña</h5>
						<ul>
							<li>Debe contener al menos un número.</li>
							<li>Debe contener al menos una letra minúscula.</li>
							<li>Debe contener al menos una letra mayúscula.</li>
							<li>Debe contener al menos un carácter especial.</li>
							<li>Debe tener entre 6 y 20 caracteres.</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
</div>
</div>
